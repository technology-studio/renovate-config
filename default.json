{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":automergeMinor"
  ],
  "rangeStrategy": "bump",
  "reviewers": [
    "rostislav-simonik",
    "erik-slovak"
  ],
  "ignoreReviewers": [
    "renovate-approve"
  ],
  "packageRules": [
    {
      "groupName": "Typescript packages",
      "groupSlug": "typescript-packages",
      "matchPackageNames": [
        "@types/node",
        "typescript"
      ]
    },
    {
      "groupName": "React packages",
      "groupSlug": "react-packages",
      "matchPackageNames": [
        "@types/react-dom",
        "@types/react",
        "react-dom",
        "react"
      ]
    }
  ]
}
