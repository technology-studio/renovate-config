{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":automergeMinor"
  ],
  "rangeStrategy": "bump",
  "assignees": [
    "rostislav-simonik",
    "erik-slovak"
  ],
  "reviewers": [
    "rostislav-simonik",
    "erik-slovak"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ]
}