{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":automergeMinor"
  ],
  "rangeStrategy": "bump",
  "reviewers": [
    "rostislav-simonik",
    "erik-slovak"
  ],
  "ignoreReviewers": [
    "renovate-approve"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "semanticCommitType": "fix"
    },
    {
      "groupName": "Typescript packages",
      "groupSlug": "typescript-packages",
      "matchPackageNames": [
        "@types/node",
        "typescript"
      ]
    },
    {
      "groupName": "React packages",
      "groupSlug": "react-packages",
      "extends": [
        "packages:react"
      ],
      "matchPackageNames": [
        "@types/react-dom"
      ]
    },
    {
      "groupName": "Eslint txo packages",
      "groupSlug": "eslint-txo-packages",
      "matchPackageNames": [
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint",
        "eslint-config-txo-typescript",
        "eslint-config-txo-typescript-react",
        "eslint-formatter-pretty",
        "eslint-plugin-eslint-comments",
        "eslint-plugin-import",
        "eslint-plugin-jest",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "eslint-plugin-txo-typescript"
      ],
      "separateMajorMinor": false
    },
    {
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false,
      "major":  {
        "enabled": true
      }
    }
  ]
}
