{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":automergeMinor",
    "helpers:pinGitHubActionDigests"
  ],
  "rangeStrategy": "bump",
  "reviewers": [
    "rostislav-simonik",
    "erik-slovak"
  ],
  "ignoreReviewers": [
    "renovate-approve"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "semanticCommitType": "fix"
    },
    {
      "groupName": "Typescript and Node versions",
      "groupSlug": "typescript-and-node-packages",
      "matchPackageNames": [
        "@types/node",
        "typescript"
      ],
      "matchManagers": ["nvm"]
    },
    {
      "groupName": "React packages",
      "groupSlug": "react-packages",
      "extends": [
        "packages:react"
      ],
      "matchPackageNames": [
        "@types/react-dom"
      ]
    },
    {
      "groupName": "Eslint txo packages",
      "groupSlug": "eslint-txo-packages",
      "matchPackagePrefixes": [
        "@typescript-eslint/",
        "eslint"
      ],
      "automerge": true,
      "separateMajorMinor": false
    },
    {
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false,
      "major": {
        "enabled": true
      }
    },
    {
      "groupName": "Playwright version sync",
      "packageNames": ["@playwright/test"],
      "regexManagers": [
        {
          "fileMatch": [".github/workflows/app-health-cd.yml"],
          "matchStrings": [
            "playwright_version:\\s(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
          ],
          "datasourceTemplate": "npm",
          "depNameTemplate": "@playwright/test",
          "versioningTemplate": "semver"
        }
      ]
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"]
}
